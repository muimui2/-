/* pages/puzzle/puzzle.wxss */

.puzzle_con{
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 470rpx;
  overflow: hidden;
  background-color: #f6f6f6;
  display: flex;
  display: -webkit-flex;
  justify-content: center;
  align-items: center;
}


.puzzle_con .beautify{
  width: 375rpx;
  height: 667rpx;
  overflow: hidden;
  border-radius: 3px;
  left: 50%;
  top: 50%;
  margin-left: -187rpx;
  margin-top: -333rpx;
}

.puzzle_con .beautify .img{
  height: 100%;
}

.puzzle_option{
  padding: 40rpx 20rpx 60rpx 20rpx;
  height: 260rpx;
  position: absolute;
  left: 0;
  right: 0;
  bottom: 110rpx;
  background-color: white;
  display: flex;
  display: -webkit-flex;
  justify-content: left;
}

.puzzle_option .upimg{
  position: absolute;
  width: 160rpx;
  height: 200rpx;
  border: 1px solid #D9D9D9;
  bottom: 110rpx;
}

.puzzle_option .upimg:before,
.puzzle_option .upimg:after
{
    content: " ";
    position: absolute;
    top: 50%;
    left: 50%;
    -webkit-transform: translate(-50%, -50%);
    transform: translate(-50%, -50%);
    background-color: #D9D9D9;

}

.puzzle_option .upimg:before{
    width: 2px;
    height: 39.5px;
}

.puzzle_option .upimg:after{
    width: 39.5px;
    height: 2px;
}

.puzzle_option .filter_con{
  
  width: 100%;
  height: 200rpx;
  position: absolute;
  bottom: -110rpx;
  left: 200rpx;
  right: 0;

} 
