/* pages/personal/personal.wxss */

.container{
  margin-bottom: 46px;
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
}

.loginbox{
  width: 100%;
  height: 130px;
  border-radius: 10px;
  background-color: #e46884;
  display: flex;
  display: -webkit-flex;
  align-items: center;
  
}

.loginbox .avatar{
  width: 50px;
  height: 50px;
  border-radius: 50%;
  overflow: hidden;
  background-color: white;
  margin-left: 50px;
  margin-right: 10px;
}

.loginbox .avatar .iconfont{
  color: #fbbd16;
  font-size: 30px;
  display: flex;
  display: -webkit-flex;
  justify-content: center;
  align-items: center;
}

.loginbox .avatar image{
  width: 100%;
}

.loginbox .login_info{
  color: white;
  line-height: 20px;
}

.loginbox .login_info .login_text{
  color: white;
  line-height: normal;
  text-align: left;
  background-color: transparent;
  border: none;
  padding: 0;
  outline: none;

}

.loginbox .login_info .login_text::after{
  border: none;
}

.loginbox .login_info .info{
  font-size: 12px;
}


/* 关注我们 */

.feedback{
  margin: 0 -20rpx;
  margin-top: 40px;
}

.feedback .item{
  display: flex;
  display: -webkit-flex;
  justify-content: space-between;
  align-items: center;
  padding: 10px 20rpx;
  font-size: 14px;
  background-color: white;
  margin-bottom: 2px;
}

.feedback .item .iconfont{
  font-size: 12px;
  display: flex;
  display: -webkit-flex;
  align-items: center;
}
